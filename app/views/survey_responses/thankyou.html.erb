<% content_for :scripts do %>
<script>
    function findGetParameter(parameterName) {
        var result = null,
            tmp = [];
        var items = location.search.substr(1).split("&");
        for (var index = 0; index < items.length; index++) {
            tmp = items[index].split("=");
            if (tmp[0] === parameterName) result = decodeURIComponent(tmp[1]);
        }
        return result;
    }
    $(function() {
        setTimeout(function() {
            var qstr = "?ran_1="+findGetParameter("ran1")+"&ran_2="+findGetParameter("ran2")
            window.location.href = 'https://ucisocsci.az1.qualtrics.com/jfe/form/SV_9N7BS0ylSNdwbIN'+qstr
        }, 3000);
    });
</script>
<% end %>